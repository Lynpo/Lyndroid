<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:startColor="@color/color_cccccc"
                android:centerColor="@color/color_cccccc"
                android:centerY="0.5"
                android:endColor="@color/color_cccccc"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:startColor="@color/color_2c64bd"
                    android:centerColor="@color/color_2c64bd"
                    android:centerY="0.5"
                    android:endColor="@color/color_2c64bd"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:startColor="#FF6495ED"
                    android:centerColor="#FF6495ED"
                    android:centerY="0.5"
                    android:endColor="#FF6495ED"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
