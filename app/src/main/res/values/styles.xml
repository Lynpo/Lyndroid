<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextNormal" parent="AppTheme">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextTitle" parent="AppTheme">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextGray" parent="AppTheme">
        <item name="android:textColor">@color/color_d9d9d9</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextNormalBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="StarView">
        <attr name="path_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="CornerShape">
        <attr name="paint_color" format="color"/>
    </declare-styleable>
</resources>
