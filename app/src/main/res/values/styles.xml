<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="NormalTextBold" parent="NormalText">
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="StarView">
        <attr name="path_color" format="color"/>
    </declare-styleable>
    <declare-styleable name="CornerShape">
        <attr name="paint_color" format="color"/>
    </declare-styleable>
</resources>
